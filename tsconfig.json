{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"@app/*": ["src/app/*"],
			"@common/*": ["src/components/common/*"],
			"@content/*": ["src/content/*"],
			"@env/*": ["src/env/*"],
			"@helpers/*": ["src/helpers/*"],
			"@hooks/*": ["src/hooks/*"],
			"@lib/*": ["src/lib/*"],
			"@server/*": ["src/server/*"],
			"@t/*": ["src/types/*"],
			"@ui/*": ["src/components/ui/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es2020",
		"types": ["node"],
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"exclude": ["node_modules"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"src/types/**/*.d.ts"
	]
}
